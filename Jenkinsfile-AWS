pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'junittesting'
        DOCKER_TAG = "${env.BUILD_NUMBER}"
    }

    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    // Build the Docker image
                    bat "docker build -t ${DOCKER_IMAGE}:${DOCKER_TAG} ."
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    // Run the container to execute tests
                    bat "docker run --rm ${DOCKER_IMAGE}:${DOCKER_TAG} ./mvnw test"
                }
            }
        }

        stage('Archive Test Results') {
            steps {
                // Archive test results (Assuming Maven produces a test results file)
                junit '**/target/surefire-reports/*.xml'
            }
        }

        stage('Deploy') {
            when {
                branch 'main'
            }
            steps {
                script {
                    // Deploy the application (Example deployment step)
                    echo "Deploying application..."
                    // Add deployment steps here
                }
            }
        }
    }

    post {
        always {
            // Cleanup Docker images (Optional)
            bat "docker rmi ${DOCKER_IMAGE}:${DOCKER_TAG} || true"
        }
    }
}
